<body>
  <div class="container">
    <div class="row">
      <div class="col-md-12 m-auto">
        <h1 class="text-center display-4 my-4">Welcome To TapSearch</h1>
        <form action="/indexing" method="POST">
            <div class="form-group">

              <textarea class="form-control" name="paragraph" placeholder="Enter the paragraph" required></textarea>      
              </div>
             <!-- <div class="form-group">
          <input type="text" class="form-control" name="email_id" placeholder="Enter Your Email-Id" required>       
            </div> -->
          <div class="form-group">
          <input type="submit" value="Index the paragraphs" class="btn btn-primary btn-block">    
          </div>
          
        </form>
       <form action="/clear">
       <div class="form-group">
       <input type="submit" class="btn btn-danger btn-block" value="Clear all documents and indexes" />
       </div>
       </form>
        <hr style="height:1px;border:none;color:#333;background-color:#333;">
         <form action="/search" method="POST">
       <div class="form-group">
       <input type="text" class="form-control" name="search_key" placeholder="Enter the word to search" required>       
       </div>
       <div class="form-group">
       <input type="submit" class="btn btn-success btn-block" value="Search For A Word" required/>
       </div>
       </form>
      </div>
    </div>
  </div>

